<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/choise_upload_file_height"
    app:behavior_hideable = "true"
    app:behavior_peekHeight = "@dimen/choise_upload_file_peekHeight"
    android:id="@+id/bottom_sheet"
    android:gravity="center"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/choise_file_button"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:src="@drawable/ico_choise_file"
        android:layout_margin="7dp"/>

    <ImageView
        android:id="@+id/choise_image_button"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/ico_choise_image"
        android:padding="3dp"
        android:layout_margin="7dp"/>

</LinearLayout>