<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:behavior_hideable = "true"
    app:behavior_peekHeight = "@dimen/choise_upload_file_peekHeight"
    android:id="@+id/bottom_sheet_yes_no"
    android:gravity="center"
    android:background="@color/colorBackGround"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/choise_yes_button"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:src="@drawable/ico_yes"
        android:layout_margin="7dp"/>

    <TextView
        android:id="@+id/qr_err_data"
        style="@style/mail_edit_style"
        android:autofillHints=""
        android:text="@string/qr_link_no_safe_text"
        android:gravity="center"
        android:layout_width="@dimen/qr_err_data_width"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/choise_no_button"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/ico_no"
        android:padding="3dp"
        android:layout_margin="7dp"/>

</LinearLayout>