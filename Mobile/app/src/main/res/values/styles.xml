<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="MaterialDrawerTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupTheme">@style/action_menu</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorAccent</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/colorAccent</item>
        <item name="material_drawer_primary_text">@color/colorPrimaryDark</item>
        <item name="material_drawer_primary_icon">@color/colorPrimaryDark</item>
        <item name="material_drawer_secondary_text">@color/colorAccent</item>
        <item name="material_drawer_hint_text">@color/colorAccent</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item> <!-- Material 2 defines 12% alpha, primary color -->
        <item name="material_drawer_selected_legacy">@color/material_drawer_selected</item> <!-- Defines the color if legacy style (Material 1, is enabled) -->
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">@color/colorAccent</item>
        <item name="material_drawer_header_selection_subtext">@color/material_drawer_dark_header_selection_subtext</item>
        <item name="material_drawer_legacy_style">false</item> <!-- Enables legacy Material 1 style -->
    </style>

    <style name="AppThemeDark" parent="MaterialDrawerTheme">
    </style>

    <style name="settings_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sett_text_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginStart">@dimen/sett_horizont_margin</item>
    </style>

    <style name="settings_separator_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">@dimen/sett_separator_margin_top</item>
        <item name="android:layout_marginStart">@dimen/sett_horizont_margin</item>
        <item name="android:layout_marginEnd">@dimen/sett_horizont_margin</item>
        <item name="android:background">@color/colorMiddle</item>
    </style>

    <style name="settings_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/sett_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/sett_horizont_margin</item>
    </style>

    <style name="settings_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sett_group_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/sett_group_margin_bottom</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="action_menu" parent="Theme.AppCompat.Light">
        <item name="background">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="register_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sett_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_margin">@dimen/sett_horizont_margin</item>
        <item name="android:padding">@dimen/up_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">""</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:autofillHints">""</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="mail_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/sett_text_size</item>
        <item name="android:layout_margin">@dimen/sett_horizont_margin</item>
        <item name="android:padding">@dimen/up_padding</item>
        <item name="android:gravity">left</item>
        <item name="android:hint">""</item>
        <item name="android:background">@drawable/background_file_warp_item</item>
        <item name="android:autofillHints">""</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="main_tool_bar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="main_tool_bar_style">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="toolbar_info_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/toolbar_info_margin_top</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/toolbar_info_text_size</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings_acc_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/sett_horizont_margin</item>
        <item name="android:layout_marginTop">@dimen/sett_group_margin_top</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/sett_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/sett_horizont_margin</item>
        <item name="android:contentDescription">TODO</item>
    </style>
</resources>